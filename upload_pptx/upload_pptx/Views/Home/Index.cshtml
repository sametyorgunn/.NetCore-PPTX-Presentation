        <br /><br /><br />
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox" style="width:100%; height:auto !important;">
                @for (int i = 0; i < Model.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                              <img class="d-block w-100" src="~/Slides/@Model[i].Yol" style="width: 100%; height: auto; margin:auto !important" class="img-responsive" alt="First slide">
                        </div>
                    }
                    else
                    {

                        <div class="carousel-item">
                            <img src="~/Slides/@Model[i].Yol" style="width: 100%; height: auto; margin:auto !important" class="img-responsive " />
                            <p style="text-align:center;">
                                <strong>@(Model[i].SlideNumber + 1)/@Model.Count</strong>
                            </p>
                        </div>

                    }
                }


                
            </div>
            <a class="btn btn-info" href="#carouselExampleControls" data-slide="prev">Geri</a>
            <a class="btn btn-info" style="margin-left:990px;" href="#carouselExampleControls" data-slide="next">ileri</a>

            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>



  

